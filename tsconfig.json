{
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./lib",
    "lib": ["esnext"],
    "target": "ES5",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  }
}
